---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPublishedNews, formatDate } from '../lib/notion';

// Letzte 3 News-Artikel von Notion laden
let news: any[] = [];
try {
  const allNews = await getPublishedNews();
  news = allNews.slice(0, 3);
} catch (e) {
  console.error('News konnten nicht geladen werden:', e);
}
---

<BaseLayout title="Startseite">
  <!-- HERO SECTION -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-r from-[#0a0a0a] via-[#0a0a0a]/90 to-blue-900/60 z-10"></div>
      <img src="/images/hero-bg.jpg" alt="" class="w-full h-full object-cover" />
    </div>
    
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-[#0a0a0a]" style="clip-path: polygon(0 100%, 100% 0, 100% 100%, 0 100%);"></div>
    
    <div class="relative z-20 container mx-auto px-4">
      <div class="max-w-3xl">
        <span class="inline-block text-yellow-400 font-heading tracking-[0.3em] text-sm mb-4">WILLKOMMEN</span>
        <h1 class="font-heading text-5xl md:text-7xl lg:text-8xl font-bold mb-6 leading-none">
          SV STADEN<br />
          <span class="text-yellow-400">SEIT 1921</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-xl leading-relaxed">
          Seit 1921 vereint durch Leidenschaft, Tradition und den gemeinsamen Willen zum Erfolg.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/ueber-uns" class="bg-yellow-400 text-black px-8 py-4 font-heading font-bold tracking-wider hover:bg-white transition-colors">
            MEHR ERFAHREN
          </a>
          <a href="/kontakt" class="border-2 border-white px-8 py-4 font-heading font-bold tracking-wider hover:bg-white hover:text-black transition-colors">
            KONTAKT
          </a>
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 z-20 animate-bounce">
      <svg class="w-6 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- ABOUT TEASER -->
  <section class="py-24 bg-[#171717] relative overflow-hidden">
    <div class="absolute left-0 top-0 bottom-0 w-1/3 bg-yellow-400/5"></div>
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="relative">
          <div class="absolute -top-4 -left-4 w-24 h-24 border-4 border-yellow-400"></div>
          <img src="/images/team-photo.jpg" alt="Mannschaftsfoto" class="relative z-10 w-full aspect-[4/3] object-cover bg-[#1f1f1f]" />
          <div class="absolute -bottom-4 -right-4 bg-yellow-400 text-black p-6 z-20">
            <span class="font-heading text-5xl font-bold block">100+</span>
            <span class="text-sm tracking-wider">JAHRE TRADITION</span>
          </div>
        </div>
        
        <div>
          <span class="text-yellow-400 font-heading tracking-[0.2em] text-sm">ÃœBER UNS</span>
          <h2 class="font-heading text-4xl md:text-5xl font-bold mt-2 mb-6 accent-line">
            EINE GROSSE<br />GESCHICHTE
          </h2>
          <p class="text-gray-400 leading-relaxed mb-6">
            Der SV Staden 1921 e.V. ist ein Verein voller Leidenschaft fÃ¼r den FuÃŸball. Seit der GrÃ¼ndung hat der Verein eine beeindruckende Geschichte voller Erfolge und Traditionen aufgebaut.
          </p>
          <p class="text-gray-400 leading-relaxed mb-8">
            Wir vermitteln traditionelle Werte wie Zusammenhalt, Fairness und Respekt â€“ und schaffen Gemeinschaftserlebnisse, die weit Ã¼ber den reinen FuÃŸball hinausgehen.
          </p>
          <a href="/ueber-uns" class="inline-flex items-center gap-2 text-yellow-400 font-heading font-bold tracking-wider hover:gap-4 transition-all">
            UNSERE GESCHICHTE
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- NEWS SECTION -->
  <section class="py-24 bg-[#0a0a0a]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-yellow-400 font-heading tracking-[0.2em] text-sm">AKTUELLES</span>
        <h2 class="font-heading text-4xl md:text-5xl font-bold mt-2 accent-line accent-line-center inline-block">
          NEUIGKEITEN
        </h2>
      </div>

      {news.length > 0 ? (
        <div class="grid md:grid-cols-3 gap-8">
          {news.map((item) => (
            <article class="group cursor-pointer">
              <a href={`/aktuelles/${item.slug}`} class="block">
                <div class="relative overflow-hidden mb-4">
                  <div class="aspect-[4/3] bg-[#1f1f1f]">
                    {item.image ? (
                      <img 
                        src={item.image} 
                        alt={item.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    ) : (
                      <div class="w-full h-full bg-gradient-to-br from-blue-900/50 to-[#0a0a0a] flex items-center justify-center">
                        <span class="text-6xl opacity-30">ðŸ“°</span>
                      </div>
                    )}
                  </div>
                  <div class="absolute inset-0 bg-yellow-400/0 group-hover:bg-yellow-400/20 transition-colors duration-300"></div>
                  <div class="absolute bottom-0 left-0 right-0 h-1 bg-yellow-400 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
                  <span class="absolute top-4 left-4 bg-yellow-400 text-black px-3 py-1 text-xs font-heading font-bold tracking-wider">
                    {(item.category || 'VEREIN').toUpperCase()}
                  </span>
                </div>
                <span class="text-gray-500 text-sm">{formatDate(item.date)}</span>
                <h3 class="font-heading text-xl font-bold mt-2 group-hover:text-yellow-400 transition-colors">
                  {item.title}
                </h3>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <span class="text-6xl mb-4 block opacity-30">ðŸ“°</span>
          <p class="text-gray-500">Noch keine Neuigkeiten vorhanden.</p>
        </div>
      )}

      <div class="text-center mt-12">
        <a href="/aktuelles" class="inline-block border-2 border-yellow-400 text-yellow-400 px-8 py-3 font-heading font-bold tracking-wider hover:bg-yellow-400 hover:text-black transition-colors">
          ALLE NEUIGKEITEN
        </a>
      </div>
    </div>
  </section>

  <!-- SPONSORS -->
  <section class="py-16 bg-[#0a0a0a] border-y border-white/10">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <span class="text-gray-500 font-heading tracking-[0.2em] text-xs">UNSERE PARTNER</span>
      </div>
      <div class="flex flex-wrap items-center justify-center gap-12 opacity-60 hover:opacity-100 transition-opacity">
        <a href="#" class="text-2xl font-heading text-gray-400 hover:text-yellow-400 transition-colors">SPONSOR 1</a>
        <a href="#" class="text-2xl font-heading text-gray-400 hover:text-yellow-400 transition-colors">SPONSOR 2</a>
        <a href="#" class="text-2xl font-heading text-gray-400 hover:text-yellow-400 transition-colors">SPONSOR 3</a>
        <a href="#" class="text-2xl font-heading text-gray-400 hover:text-yellow-400 transition-colors">SPONSOR 4</a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-blue-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-blue-900/50"></div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <h2 class="font-heading text-4xl md:text-6xl font-bold mb-6">
        WERDE TEIL DER<br /><span class="text-yellow-400">SV STADEN FAMILIE!</span>
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Egal ob als aktiver Spieler, UnterstÃ¼tzer oder Fan â€“ bei uns ist jeder willkommen.
      </p>
      <a href="/kontakt" class="inline-block bg-yellow-400 text-black px-10 py-4 font-heading font-bold tracking-wider text-lg hover:bg-white transition-colors">
        JETZT KONTAKT AUFNEHMEN
      </a>
    </div>
  </section>
</BaseLayout>