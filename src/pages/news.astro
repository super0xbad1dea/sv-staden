---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPublishedNews, formatDate } from '../lib/notion';

// News von Notion laden
let news: any[] = [];
let error: string | null = null;

try {
  news = await getPublishedNews();
} catch (e) {
  error = 'News konnten nicht geladen werden';
  console.error(e);
}

const categories = ['Alle', '1. Mannschaft', 'Jugend', 'Verein', 'Alte Herren'];
---

<BaseLayout title="News" description="Aktuelle Neuigkeiten vom SV Teutonia 1921 Staden e.V.">
  <!-- Hero -->
  <section class="bg-[#0a0a0a] pt-12 pb-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-900/20 to-transparent"></div>
    <div class="container mx-auto px-4 relative z-10">
      <span class="text-yellow-400 font-heading tracking-[0.2em] text-sm">AKTUELLES</span>
      <h1 class="font-heading text-5xl md:text-6xl font-bold mt-2 accent-line">NEUIGKEITEN</h1>
      <p class="text-gray-400 mt-8 max-w-2xl">Alle aktuellen Meldungen, Spielberichte und Vereinsnews auf einen Blick.</p>
    </div>
  </section>

  <!-- Filter -->
  <section class="bg-[#171717] border-y border-white/10 sticky top-20 z-30">
    <div class="container mx-auto px-4">
      <div class="flex items-center gap-2 py-4 overflow-x-auto" id="category-filter">
        {categories.map((cat, i) => (
          <button 
            data-category={cat}
            class={`category-btn px-5 py-2 font-heading text-sm tracking-wider whitespace-nowrap transition-colors ${i === 0 ? 'bg-yellow-400 text-black' : 'bg-[#1f1f1f] text-gray-400 hover:text-white'}`}
          >
            {cat.toUpperCase()}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- News Grid -->
  <section class="py-20 bg-[#0a0a0a]">
    <div class="container mx-auto px-4">
      {error ? (
        <div class="text-center py-12">
          <p class="text-red-400">{error}</p>
          <p class="text-gray-500 mt-2">Bitte spÃ¤ter erneut versuchen.</p>
        </div>
      ) : news.length === 0 ? (
        <div class="text-center py-12">
          <span class="text-6xl mb-4 block">ðŸ“°</span>
          <p class="text-gray-400">Noch keine News vorhanden.</p>
          <p class="text-gray-500 text-sm mt-2">Neue Artikel werden in Notion erstellt.</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="news-grid">
          {news.map((item) => (
            <article 
              class="news-item group cursor-pointer bg-[#171717] hover:bg-[#1a1a1a] transition-colors"
              data-category={item.category}
            >
              <a href={`/news/${item.slug}`} class="block">
                <div class="relative overflow-hidden">
                  <div class="aspect-video bg-[#1f1f1f]">
                    {item.image ? (
                      <img 
                        src={item.image} 
                        alt={item.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    ) : (
                      <div class="w-full h-full bg-gradient-to-br from-blue-900/50 to-[#0a0a0a] flex items-center justify-center">
                        <span class="text-6xl opacity-30">ðŸ“°</span>
                      </div>
                    )}
                  </div>
                  <div class="absolute inset-0 bg-yellow-400/0 group-hover:bg-yellow-400/10 transition-colors duration-300"></div>
                  <span class="absolute top-4 left-4 bg-yellow-400 text-black px-3 py-1 text-xs font-heading font-bold tracking-wider">
                    {item.category.toUpperCase()}
                  </span>
                </div>
                <div class="p-6">
                  <span class="text-gray-500 text-sm">{formatDate(item.date)}</span>
                  <h3 class="font-heading text-xl font-bold mt-2 mb-3 group-hover:text-yellow-400 transition-colors leading-tight">
                    {item.title}
                  </h3>
                  <p class="text-gray-400 text-sm leading-relaxed line-clamp-3">
                    {item.excerpt}
                  </p>
                  <div class="inline-flex items-center gap-2 text-yellow-400 text-sm font-heading font-bold tracking-wider mt-4 group-hover:gap-3 transition-all">
                    WEITERLESEN
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Social Media Section -->
  <section class="py-20 bg-[#171717] border-t border-white/10">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <span class="text-yellow-400 font-heading tracking-[0.2em] text-sm">SOCIAL MEDIA</span>
        <h2 class="font-heading text-3xl md:text-4xl font-bold mt-2">FOLGE UNS</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Instagram -->
        <a href="https://instagram.com/svteutoniastaden" target="_blank" rel="noopener noreferrer" 
           class="bg-[#1a1a1a] border border-white/10 p-8 hover:border-pink-500/50 transition-colors group block">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-14 h-14 bg-gradient-to-br from-purple-500 via-pink-500 to-orange-500 rounded-xl flex items-center justify-center">
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
              </svg>
            </div>
            <div>
              <span class="font-heading font-bold text-xl">Instagram</span>
              <p class="text-gray-500">@svteutoniastaden</p>
            </div>
          </div>
          <p class="text-gray-400 mb-4">Folge uns fÃ¼r Fotos, Stories und Einblicke hinter die Kulissen!</p>
          <span class="inline-flex items-center gap-2 text-pink-400 font-heading font-bold tracking-wider group-hover:gap-3 transition-all">
            FOLGEN
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>

        <!-- Facebook -->
        <a href="https://facebook.com/svteutoniastaden" target="_blank" rel="noopener noreferrer"
           class="bg-[#1a1a1a] border border-white/10 p-8 hover:border-blue-500/50 transition-colors group block">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-14 h-14 bg-blue-600 rounded-xl flex items-center justify-center">
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
              </svg>
            </div>
            <div>
              <span class="font-heading font-bold text-xl">Facebook</span>
              <p class="text-gray-500">SV Teutonia Staden</p>
            </div>
          </div>
          <p class="text-gray-400 mb-4">Alle News, Spielberichte und Veranstaltungen auf unserer Facebook-Seite!</p>
          <span class="inline-flex items-center gap-2 text-blue-400 font-heading font-bold tracking-wider group-hover:gap-3 transition-all">
            FOLGEN
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.category-btn');
    const newsItems = document.querySelectorAll('.news-item');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.getAttribute('data-category');

        buttons.forEach(b => {
          b.classList.remove('bg-yellow-400', 'text-black');
          b.classList.add('bg-[#1f1f1f]', 'text-gray-400');
        });
        btn.classList.remove('bg-[#1f1f1f]', 'text-gray-400');
        btn.classList.add('bg-yellow-400', 'text-black');

        newsItems.forEach(item => {
          const itemCategory = item.getAttribute('data-category');
          if (category === 'Alle' || itemCategory === category) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>