  { role: 'Jugendleiter', name: 'Pierre May & Tobias Jakobi', email: 'jugend@sv-staden.de', phone: '' },
];
---

<BaseLayout title="Kontakt" description="Kontakt zum SV Teutonia 1921 Staden e.V.">
  <!-- Hero -->
  <section class="bg-dark pt-12 pb-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-primary/20 to-transparent"></div>
    <div class="container mx-auto px-4 relative z-10">
      <span class="text-accent font-heading tracking-[0.2em] text-sm">SCHREIB UNS</span>
      <h1 class="font-heading text-5xl md:text-6xl font-bold mt-2 accent-line">KONTAKT</h1>
      <p class="text-gray-400 mt-8 max-w-2xl">Wir freuen uns auf deine Nachricht!</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-20 bg-dark-50">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Left: Contact Info -->
        <div>
          <span class="text-accent font-heading tracking-[0.2em] text-sm">SO ERREICHST DU UNS</span>
          <h2 class="font-heading text-3xl font-bold mt-2 mb-8">KONTAKTDATEN</h2>

          <!-- Address Card -->
          <div class="bg-dark border border-white/10 p-6 mb-6 hover:border-accent/50 transition-colors">
            <div class="flex gap-4">
              <div class="w-14 h-14 bg-accent flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-bold text-lg mb-2">Sportplatz</h3>
                <p class="text-gray-400">
                  SV Teutonia 1921 Staden e.V.<br />
                  Parkweg<br />
                  61169 Florstadt - OT Staden
                </p>
              </div>
            </div>
          </div>

          <!-- Email Card -->
          <div class="bg-dark border border-white/10 p-6 mb-6 hover:border-accent/50 transition-colors">
            <div class="flex gap-4">
              <div class="w-14 h-14 bg-accent flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-bold text-lg mb-2">E-Mail</h3>
                <a href="mailto:info@sv-staden.de" class="text-accent hover:text-white transition-colors text-lg">
                  info@sv-staden.de
                </a>
              </div>
            </div>
          </div>

          <!-- Ansprechpartner -->
          <h3 class="font-heading font-bold text-xl mt-12 mb-6">ANSPRECHPARTNER</h3>
          <div class="space-y-4">
            {contacts.map((c) => (
              <div class="bg-dark border border-white/10 p-4 flex items-center gap-4 hover:border-accent/50 transition-colors">
                <div class="w-12 h-12 bg-primary/30 flex items-center justify-center flex-shrink-0">
                  <span class="text-xl">ðŸ‘¤</span>
                </div>
                <div class="flex-grow">
                  <span class="text-accent text-xs font-heading tracking-wider">{c.role.toUpperCase()}</span>
                  <p class="font-bold">{c.name}</p>
                </div>
                <a href={`mailto:${c.email}`} class="text-accent hover:text-white transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </a>
              </div>
            ))}
          </div>

          <!-- Social -->
          <h3 class="font-heading font-bold text-xl mt-12 mb-6">FOLGE UNS</h3>
          <div class="flex gap-4">
            <a href="https://facebook.com" target="_blank" rel="noopener" class="w-14 h-14 bg-dark border border-white/10 flex items-center justify-center hover:bg-blue-600 hover:border-blue-600 transition-colors group">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="https://instagram.com" target="_blank" rel="noopener" class="w-14 h-14 bg-dark border border-white/10 flex items-center justify-center hover:bg-gradient-to-br hover:from-purple-500 hover:via-pink-500 hover:to-orange-500 hover:border-transparent transition-all group">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right: Contact Form -->
        <div>
          <span class="text-accent font-heading tracking-[0.2em] text-sm">NACHRICHT</span>
          <h2 class="font-heading text-3xl font-bold mt-2 mb-8">SCHREIB UNS</h2>

          <form name="kontakt" method="POST" data-netlify="true" class="space-y-6">
            <input type="hidden" name="form-name" value="kontakt" />
            
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-heading tracking-wider text-gray-400 mb-2">NAME *</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required 
                  class="w-full bg-dark border border-white/20 px-4 py-4 text-white focus:border-accent focus:outline-none transition-colors"
                  placeholder="Dein Name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-heading tracking-wider text-gray-400 mb-2">E-MAIL *</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required 
                  class="w-full bg-dark border border-white/20 px-4 py-4 text-white focus:border-accent focus:outline-none transition-colors"
                  placeholder="deine@email.de"
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-heading tracking-wider text-gray-400 mb-2">BETREFF</label>
              <select 
                id="subject" 
                name="subject"
                class="w-full bg-dark border border-white/20 px-4 py-4 text-white focus:border-accent focus:outline-none transition-colors"
              >
                <option value="allgemein">Allgemeine Anfrage</option>
                <option value="mitgliedschaft">Mitgliedschaft</option>
                <option value="jugend">Jugendabteilung</option>
                <option value="sponsoring">Sponsoring</option>
                <option value="sonstiges">Sonstiges</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-heading tracking-wider text-gray-400 mb-2">NACHRICHT *</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full bg-dark border border-white/20 px-4 py-4 text-white focus:border-accent focus:outline-none transition-colors resize-none"
                placeholder="Deine Nachricht..."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full bg-accent text-dark py-4 font-heading font-bold tracking-wider hover:bg-white transition-colors"
            >
              NACHRICHT SENDEN
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>