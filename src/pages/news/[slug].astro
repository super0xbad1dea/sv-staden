---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPublishedNews, getNewsArticle, formatDate } from '../../lib/notion';

// Statische Pfade generieren
export async function getStaticPaths() {
  const news = await getPublishedNews();
  return news.map(article => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;

if (!article) {
  return Astro.redirect('/news');
}
---

<BaseLayout title={article.title} description={article.excerpt}>
  <!-- Hero -->
  <section class="bg-[#0a0a0a] pt-12 pb-8 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-900/20 to-transparent"></div>
    <div class="container mx-auto px-4 relative z-10">
      <a href="/news" class="inline-flex items-center gap-2 text-gray-400 hover:text-yellow-400 transition-colors mb-6">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Zur√ºck zu News
      </a>
      
      <span class="inline-block bg-yellow-400 text-black px-3 py-1 text-xs font-heading font-bold tracking-wider mb-4">
        {article.category.toUpperCase()}
      </span>
      
      <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4">
        {article.title}
      </h1>
      
      <div class="flex flex-wrap items-center gap-4 text-gray-400 text-sm">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {formatDate(article.date)}
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          {article.author}
        </span>
      </div>
    </div>
  </section>

  <!-- Artikel Content -->
  <article class="py-12 bg-[#0a0a0a]">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <!-- Titelbild -->
        {article.image && (
          <div class="mb-10 -mx-4 md:mx-0">
            <img 
              src={article.image} 
              alt={article.title}
              class="w-full aspect-video object-cover"
            />
          </div>
        )}

        <!-- Kurztext / Lead -->
        {article.excerpt && (
          <p class="text-xl text-gray-300 leading-relaxed mb-8 border-l-4 border-yellow-400 pl-6">
            {article.excerpt}
          </p>
        )}

        <!-- Hauptinhalt -->
        <div class="prose prose-invert prose-lg max-w-none">
          <div class="text-gray-300 leading-relaxed whitespace-pre-wrap">
            {article.content}
          </div>
        </div>

        <!-- Share Buttons -->
        <div class="mt-12 pt-8 border-t border-white/10">
          <span class="text-gray-500 text-sm font-heading tracking-wider mb-4 block">ARTIKEL TEILEN</span>
          <div class="flex gap-4">
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
              target="_blank"
              rel="noopener"
              class="w-12 h-12 bg-[#171717] border border-white/10 flex items-center justify-center hover:bg-blue-600 hover:border-blue-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a 
              href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${article.title}`}
              target="_blank"
              rel="noopener"
              class="w-12 h-12 bg-[#171717] border border-white/10 flex items-center justify-center hover:bg-black hover:border-white transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a 
              href={`https://wa.me/?text=${article.title} ${Astro.url}`}
              target="_blank"
              rel="noopener"
              class="w-12 h-12 bg-[#171717] border border-white/10 flex items-center justify-center hover:bg-green-600 hover:border-green-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Weitere Artikel -->
  <section class="py-16 bg-[#171717] border-t border-white/10">
    <div class="container mx-auto px-4 text-center">
      <a href="/news" class="inline-block border-2 border-yellow-400 text-yellow-400 px-8 py-3 font-heading font-bold tracking-wider hover:bg-yellow-400 hover:text-black transition-colors">
        ALLE NEWS ANZEIGEN
      </a>
    </div>
  </section>
</BaseLayout>