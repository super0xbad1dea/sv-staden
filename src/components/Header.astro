---
const navItems = [
  { href: '/', label: 'HOME' },
  { href: '/mannschaften', label: 'MANNSCHAFTEN' },
  { href: '/news', label: 'NEWS' },
  { href: '/ueber-uns', label: 'ÜBER UNS' },
  { href: '/sponsoren', label: 'SPONSOREN' },
  { href: '/kontakt', label: 'KONTAKT' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <div class="bg-dark/95 backdrop-blur-md border-b border-white/10">
    <nav class="container mx-auto px-4">
      <div class="flex items-center justify-between h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group">
          <img 
            src="/images/logo.png" 
            alt="SV Teutonia Staden Logo" 
            class="h-14 w-14 rounded-full border-2 border-accent group-hover:border-white transition-colors"
          />
          <div class="hidden sm:block">
            <span class="font-heading font-bold text-xl block leading-tight tracking-wide">SV TEUTONIA</span>
            <span class="text-accent text-sm tracking-widest">STADEN 1921</span>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <ul class="hidden lg:flex items-center gap-1">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  'px-4 py-2 font-heading font-medium tracking-wider text-sm transition-all duration-200 relative',
                  currentPath === item.href
                    ? 'text-accent'
                    : 'text-gray-300 hover:text-white',
                ]}
              >
                {item.label}
                {currentPath === item.href && (
                  <span class="absolute bottom-0 left-4 right-4 h-0.5 bg-accent"></span>
                )}
              </a>
            </li>
          ))}
        </ul>

        <!-- CTA Button -->
        <a href="/kontakt" class="hidden md:block bg-accent text-dark px-6 py-2 font-heading font-bold tracking-wider text-sm hover:bg-accent-500 transition-colors">
          MITGLIED WERDEN
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 text-white hover:text-accent transition-colors"
          aria-label="Menü öffnen"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="lg:hidden hidden pb-6">
        <ul class="flex flex-col gap-2">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  'block px-4 py-3 font-heading font-medium tracking-wider border-l-4 transition-all',
                  currentPath === item.href
                    ? 'border-accent text-accent bg-white/5'
                    : 'border-transparent text-gray-300 hover:border-accent hover:text-white',
                ]}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        <a href="/kontakt" class="block mt-4 mx-4 bg-accent text-dark px-6 py-3 font-heading font-bold tracking-wider text-center">
          MITGLIED WERDEN
        </a>
      </div>
    </nav>
  </div>
</header>

<!-- Spacer für fixed header -->
<div class="h-20"></div>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  
  // Header Scroll Effect
  const header = document.getElementById('main-header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('shadow-2xl');
    } else {
      header?.classList.remove('shadow-2xl');
    }
  });
</script>